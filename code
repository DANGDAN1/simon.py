def display_sequence(list):
    p = " "
    for x in list:
        if x == 0:
            p = "red"
            print(p)
        elif x == 1:
            p = "green"
            print(p)
        elif x == 2:
            p = "Yellow"
            print(p)
        else:
            p = "Blue"
            print(p)

